@using EpiServer.Web.Mvc.Html
@using LunaEpi.Models.ViewModels
@using LunaEpi
@model PageViewModel<LunaEpi.Models.Pages.StandardPage>


<h1 @Html.EditAttributes(x => x.CurrentPage.Name)>@Model.CurrentPage.Name</h1>
<p class="introduction" @Html.EditAttributes(x => x.CurrentPage.MetaDescription)>@Model.CurrentPage.MetaDescription</p>
<div class="row">
    <div class="span8 clearfix">
        @Html.PropertyFor(x => x.CurrentPage.MainBody)
    </div>


    @section ImageContent
    {
        <h2 @Html.EditAttributes(x => x.CurrentPage.Name)>
            @Model.CurrentPage.Name
        </h2>
        <div @Html.EditAttributes(x => x.CurrentPage.PageImage)>
            <img src="@Url.ContentUrl(Model.CurrentPage.PageImage)" class="imageResize" />
        </div>
    }

    @section RelatedContent
    {

        @Html.PropertyFor(m => m.CurrentPage.SideBarContentArea,
            new {Tag = SiteTags.Narrow, Class= "contentResize" })
    }


    @Html.PropertyFor(m => m.CurrentPage.MainContentArea,
        new {Tag = SiteTags.Full })

</div>